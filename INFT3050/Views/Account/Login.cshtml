@model LoginViewModel
@{
    ViewData["Title"] = "Login page";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="mainShapeReg">
        <div class="rec">
            <div class="recLog">
                <p class="welcomeTitle">Welcome to <span class="vitaTitle">Vita+</span> </p>
            </div>

            <div class="loginBox">
                 <div class="title">Login</div>
                <div clas="col" asp-validation-summary="ModelOnly" class="dangerWarningLog"><span></span></div> <!--css in progress Suhain-->
                 <form method="post" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl">

                   <div class="input-container ic1">
                     <input placeholder="" asp-for="Username" class="input" id="username" required="" /> <!--Username not email check the ID-->
                     <div class="cut cut-short"></div>
                     
                    <label class="iLabel" for="input">Username</label>
                    <div class="col">
                    <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    </div>

                    <div class="input-container ic1">
                    <input placeholder="" type="password" asp-for="Password" class="input" id="password" required="" />
                        <div class="cut cut-short"></div>

                    <label class="iLabel" for="input">Password</label>
                    <div class="col">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                </div>
              

                     <button class="submit" type="submit">Login</button>
                </form>

                <form asp-controller="Account" asp-action="SignUp" method="get">
                <button class="submit" type="submit">Register Page</button>
                </form>

            </div>
                 
            </div>

        <div class="parallelogram"></div>

        <div class="ImgBox"><img src="~/Image/herbPic.jpg" alt="Login Herbal Photo" class="Img" /> </div>
    </div>
    
</body>
</html>