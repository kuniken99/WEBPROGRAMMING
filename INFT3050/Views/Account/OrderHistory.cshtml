@model OrderHistoryViewModel
@{
    ViewData["Title"] = "View Items";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
    }

    h1 {
        margin-top: 20px;
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        height: 100vh;
        max-width: 1200px;
        margin: 30px auto;
        padding: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .homeBtn {
        color: white;
        background: linear-gradient(45deg, #4CAF50, #81C784);
        padding: 12px 24px;
        border-radius: 12px;
        font-weight: 700;
        border: none;
        transition: background 0.3s, transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
        margin-bottom: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .homeBtn:hover {
            color: white;
            background: linear-gradient(45deg, #388E3C, #66BB6A);
            transform: scale(1.1);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
        }

    .back-button-container {
        margin-bottom: 30px;
    }

    .table-container {
        max-height: 300px; /* Adjust as needed */
        overflow-y: auto;
        margin: 30px 0;
        border: 1px solid #ddd;
        border-radius: 10px;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        margin: 0;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background: #4CAF50;
        color: #fff;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .emptyCart {
        text-align: center;
        color: #888;
        font-size: 18px;
        margin-top: 20px;
    }

    .detailsBtn {
        color: white;
        background: linear-gradient(45deg, #4CAF50, #81C784);
        padding: 10px 12px; /* Adjust padding */
        border-radius: 8px;
        font-weight: 600;
        border: none;
        transition: background 0.3s, transform 0.3s, box-shadow 0.3s;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        text-align: center; /* Ensure text is centered */
        white-space: nowrap; /* Prevent text from wrapping */
    }

        .detailsBtn:hover {
            color: white;
            background: linear-gradient(45deg, #388E3C, #66BB6A);
            transform: scale(1.05);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

    .details-column {
        text-align: center; /* Center the button container */
        width: 100px; /* Reduce the width */
    }
</style>

<div class="container">
    <h1>Order History</h1>
    <div class="back-button-container">
        <a asp-controller="Home" asp-action="Index" class="homeBtn">Back to Home</a>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date and Time</th>
                    <th>Subtotal</th>
                    <th>Status</th>
                    <th class="details-column"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Orders.Count() == 0)
                {
                    <p class="emptyCart">Your order history is empty. Go shop now!</p>
                }
                else
                {
                    @foreach (var order in Model.Orders)
                    {
                        if (order.UserID == Model.CustomerUserHistory.Id)
                        {
                            <tr>
                                <td>@order.OrderID</td>
                                <td>@order.Date.ToString("MMM dd, yyyy HH:mm")</td>
                                <td>$@order.OrderHistorySubtotal.ToString("F2")</td>
                                @if (order.Status == 1)
                                {
                                    <td>Processing</td>
                                }
                                else if (order.Status == 2)
                                {
                                    <td>On Delivery</td>
                                }
                                else if (order.Status == 3)
                                {
                                    <td>Delivered</td>
                                }
                                else
                                {
                                    <td>Cancelled</td>
                                }
                                <td class="details-column"><a asp-action="OrderHistoryDetail" asp-controller="Account" asp-route-id="@order.OrderID" class="detailsBtn">Order Details</a></td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
