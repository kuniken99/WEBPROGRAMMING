@model CustomerProfileViewModel

<style>
    h1 {
        text-align: center;
        margin-bottom: 10px;
    }

    .profile-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 30px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .profile-container h2 {
            text-align: center;
        }

        .profile-container h4 {
            text-align: center;
            color: #666;
        }

    .profile-item,
    .profile-change {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .profile-item label,
        .profile-change label {
            font-weight: bold;
            flex: 1;
            margin-right: 20px;
            min-width: 100px;
        }

        .profile-item input,
        .profile-change input,
        .profile-item span,
        .profile-change span {
            flex: 2;
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .profile-item span,
        .profile-change span {
            background-color: #f9f9f9;
            padding-left: 10px;
        }

        .profile-item a,
        .profile-change a {
            margin-left: 10px;
            color: #007bff;
            text-decoration: none;
            font-size: 14px;
        }

            .profile-item a:hover,
            .profile-change a:hover {
                text-decoration: underline;
            }

    .profile-image-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
    }

    .profile-image-container .font-weight-bold {
        display: block;
        font-weight: bold;
    }

    .profile-image-container .text-black-50 {
        display: block;
        color: #666;
    }

    button,
    .update-btn,
    .delete-btn {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #28a745;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
    }

        button:hover,
        .update-btn:hover,
        .delete-btn:hover {
            background-color: #218838;
        }

    .delete-btn {
        background-color: #dc3545;
    }

        .delete-btn:hover {
            background-color: #c82333;
        }

    .change-password-btn {
        width: auto;
        padding: 10px 20px;
        background-color: #28a745;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
    }

        .change-password-btn:hover {
            background-color: #218838;
        }
</style>

<div class="profile-container">
    <h1>My Profile</h1>
    <h4>Manage and Protect Your Account</h4>

    <div class="profile-image-container">
        <img class="profile-image" src="~/Image/defaultProfile.jpg" alt="Profile Image">
        <span class="font-weight-bold">@Model.FullName</span>
        <span class="text-black-50">@Model.Email</span>
    </div>

    <form id="profileForm" asp-action="UpdateCustomerProfile" asp-controller="Account" method="post">
        <div class="profile-item">
            <label>Username</label>
            <span>@Model.Username</span>
        </div>
        <input type="hidden" asp-for="Username" value="@Model.Username" />

        <div class="profile-item">
            <label asp-for="FullName">Full Name</label><br>
            <input type="text" class="form-control" asp-for="FullName">
        </div>
        <span asp-validation-for="FullName" class="text-danger"></span>

        <div class="profile-change">
            <label asp-for="Email">Email</label><br>
            <input type="email" class="form-control" asp-for="Email">
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>

        <div class="profile-change">
            <label asp-for="PhoneNumber">Phone Number</label><br>
            <input type="text" class="form-control" asp-for="PhoneNumber">
        </div>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        <div class="profile-item">
            <label asp-for="Address">Address</label><br>
            <input type="text" class="form-control" asp-for="Address">
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>

        <button type="button" class="change-password-btn" onclick="window.location.href='@Url.Action("ChangePassword", "Account")'">Change Password</button>

        <button id="saveButton" type="submit">Save</button>
    </form>

   
</div>


