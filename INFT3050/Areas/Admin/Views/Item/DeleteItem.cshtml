@model Item
@{
    ViewData["Title"] = "Delete Item";
}

<style>


    .deleteConfirmationPg {
        height: 80vh;
        display: flex;
        flex-direction: column; 
        justify-content: center;
        align-items: center;
    }


    .deleteBtnContainer{
        display: flex; 
        width: 400px;
        justify-content: space-between;
        padding: 0 20px;
        margin: 20px 0 0 0 ;
    }

    .save-button {
        color: white;
        background: #56B280;
        border-radius: 8px;
        padding: 10px;
        font-weight: 600;
        border: 2px solid white;
        width: 100px;
    }

    .cancel-button {
        color: white;
        background: red;
        border-radius: 8px;
        padding: 10px;
        font-weight: 600;
        border: 2px solid white;
        width: 100px;
        display: flex;
        justify-content: center;
        align-content: center;
        align-items: center;
        text-decoration: none;
    }


    .deleteItem{
        display: flex;
        justify-content: center;
        align-items: center;
        background: white;
        border-radius: 8px;
        flex-direction: column;
        margin: 60px 0 0 0;
        height: 50vh;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        width: 400px;
    }

    
</style>



<div class="deleteConfirmationPg">
   
 
    <div class="deleteItem">
        <div class="deleteHeading">
            <h2>Confirm Deletion</h2>
            <h3>@Model.ItemName</h3>

        </div>

        <div>
            <form asp-action="DeleteItem" method="post">

                <input type="hidden" asp-for="ItemID" />



                <div class="deleteBtnContainer">

                    <button type="submit" class="save-button">Delete</button>
                    <a asp-controller="Item" asp-action="ManageItem" class="cancel-button">Cancel</a>

                </div>


            </form>
        </div>
       


    </div>
    

</div>
