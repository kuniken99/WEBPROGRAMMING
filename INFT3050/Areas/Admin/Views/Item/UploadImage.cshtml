@using INFT3050.Areas.Admin.Models

@model UploadImageViewModel
@{
    // this view is used for add, edit, and delete.
    //var action = ViewContext.RouteData.Values["action"]!.ToString()!.Capitalize();
    string title = "Items";
    ViewData["Title"] = title;
}


<style>
    .uploadImg{
        height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    input {
        height: 20px;
        width: 300px;
        border: 2px solid black;
        border-radius: 8px;
    }

    

    .imageAdd {
    }

    .addItemBtns {
        display: flex;
        justify-content: space-between;
        padding-left: 10px;
        padding-right: 10px;
        width: 340px;
    }

    .save-button {
        margin: 20px 0 0 0;
        color: white;
        background: #56B280;
        border-radius: 8px;
        padding: 10px;
        font-weight: 600;
        border: 2px solid white;
        width: 100px;
        height: 60px;
    }

    .cancel-button {
        margin: 20px 0 0 0;
        color: white;
        background: red;
        border-radius: 8px;
        padding: 10px;
        font-weight: 600;
        border: 2px solid white;
        width: 100px;
        display: flex;
        justify-content: center;
        align-content: center;
        align-items: center;
        text-decoration: none;
        height: 60px;
    }

    .itemInput {
        display: flex;
        justify-content: center;
        align-items: center;
        background: white;
        border-radius: 8px;
        flex-direction: column;
        margin: 80px 0 0 0;
        height: 50vh;
        width: 400px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

</style>


<div class="uploadImg">


    <div class="itemInput">

        <h2>@title</h2>




        <form asp-action="UploadImage" asp-area="Admin" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            

            <div class="item-form">
                <div>
                    <label asp-for="ImageFile" class="form-label">Item Image</label>

                </div>
                <div>
                    <input asp-for="ImageFile" class="form-control">

                </div>
            </div>

            
            <input type="hidden" asp-for="ImageId" />
            <input type="hidden" asp-for="ItemId" />
            
            


            <div class="addItemBtns">
                <button type="submit" class="save-button">Save</button>
                <a asp-controller="Item" asp-action="ManageItem" class="cancel-button">Cancel</a>
            </div>

        </form>

   </<div>



</div>
